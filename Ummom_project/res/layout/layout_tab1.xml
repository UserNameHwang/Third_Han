<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tab1_nowtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 할일" />

        <TextView
            android:id="@+id/tab1_nowcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코딩해 임마"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tab1_nexttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 할일" />

        <TextView
            android:id="@+id/tab1_nextcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코딩해 개놈아"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <fragment
        android:id="@+id/scedule_homework_fragment"
        android:name="ummom.child.schedule.ScheduleModule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>