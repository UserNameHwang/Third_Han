<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/diatext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜 :" />

        <EditText
            android:id="@+id/diaedit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/diatext1"
            android:ems="10"
            android:inputType="text">

            <requestFocus />
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/diatext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용 :" />

        <EditText
            android:id="@+id/diaedit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/diatext2"
            android:ems="10"
            android:inputType="text">

            <requestFocus />
        </EditText>
	</RelativeLayout>
</LinearLayout>
