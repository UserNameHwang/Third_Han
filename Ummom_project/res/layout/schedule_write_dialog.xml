<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >
    
    <TextView
        android:id="@+id/textView_dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@drawable/title_border"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:text="추가하기"
        android:textColor="#33B5E5"
        android:textSize="20dp"        
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        >
        
        <TextView
            android:layout_height="40dp"
            android:layout_width="80dp"
            android:id="@+id/title"
            android:text="제목 :"
            android:textSize="15dp"
            android:gravity="center"
            
            />
        
        <EditText 
            android:id="@+id/editText_dialog_title"
            android:layout_height="40dp"
            android:layout_width="150dp"
            android:textSize="13dp"
            android:layout_toRightOf="@+id/title"
            android:layout_alignBaseline="@+id/title"
            />
              
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        
        <TextView
            android:layout_height="40dp"
            android:layout_width="80dp"
            android:id="@+id/des"
            android:text="설명 :"
            android:textSize="15dp"            
            android:gravity="center"
            
            />
        
        <EditText 
            android:id="@+id/editText_dialog_des"
            android:layout_height="40dp"
            android:layout_width="150dp"
            android:textSize="13dp"
            android:layout_toRightOf="@+id/des"
            android:layout_alignBaseline="@+id/des"
            />      
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        
        <TextView
            android:layout_height="40dp"
            android:layout_width="80dp"
            android:id="@+id/date"
            android:text="날짜설정 :"
            android:textSize="15dp"            
            android:gravity="center"          
                   
            />
        
        <EditText 
            android:layout_height="40dp"
            android:layout_width="70dp"
            android:id="@+id/editText_dialog_year"
            android:hint="년"
            android:textSize="13dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_toRightOf="@+id/date"
            android:layout_alignBaseline="@+id/date"
            /> 
            
        <EditText 
            android:layout_height="40dp"
            android:layout_width="70dp"
            android:id="@+id/editText_dialog_month"
            android:hint="월"
            android:textSize="13dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_toRightOf="@+id/editText_dialog_year"
            android:layout_alignBaseline="@+id/date"
            /> 
            
        <EditText 
            android:layout_height="40dp"
            android:layout_width="70dp"
            android:id="@+id/editText_dialog_day"
            android:hint="일"
            android:textSize="13dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_toRightOf="@+id/editText_dialog_month"
            android:layout_alignBaseline="@+id/date"
            /> 
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="20dp"
        >
        
        <TextView
            android:layout_height="40dp"
            android:layout_width="80dp"
            android:id="@+id/alarm"
            android:text="알람설정 :"
            android:textSize="15dp"            
            android:gravity="center"
            
            />
        
        <EditText 
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_toRightOf="@+id/alarm"
            />      
    </RelativeLayout>

</LinearLayout>
