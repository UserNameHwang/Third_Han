    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/schedule_id"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:text="schedule_id"
           	android:visibility="gone"
            android:textSize="15dp" 
            
            />

        <TextView
            android:id="@+id/textView_Schedulelist_title"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:text="Title"
            android:textSize="15dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_Schedulelist_des"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="sub_Title"
        android:textSize="15dp" 
        android:background="@drawable/firsttab_contents_border"
        />

